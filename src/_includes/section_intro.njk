{% if website.name_audio %}
	{%- set myname -%}
		<span class="speakname" onclick="javascript:document.querySelector('#audioname').play()">{{ website.display_name }}{% svgico 'speaker' %}</span><audio id="audioname" src="{{ website.name_audio }}"></audio>
	{%- endset -%}
{% else %}
	{%- set myname %}<span>{{ website.display_name }}</span>{% endset -%}
{% endif %}
<section class="intro layout vertical center-center txt-center">
	<h1 class="main-header">{{ website.intro_prefix }}{{ myname | safe }}</h1>

	<p>{{ website.about }}</p>

	{% include 'social_links.njk' %}

	{% Image "/assets/img/abhi-bw-400.jpg", website.author + "'s profile photo", false, "profilepic" %}
</section>
